#include <iostream>
#include <string>

int main() {
    std::string word1 = "hello";
    std::string word2 = "orange";

    if (word1[0] == word2[word2.length() - 1]) {
        std::cout << "The first word starts with the same letter as the last letter of the second word." << std::endl;
    } else {
        std::cout << "The first word does not start with the same letter as the last letter of the second word." << std::endl;
    }

    return 0;
}
